<div class="row">

  <div class="col-lg-12">
    
    <%= form_for(@page, html: { class: 'form-horizontal' }) do |f| %>

      <% if @page.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

          <ul>
          <% @page.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :path, class: "col-sm-1 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :path, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :title, class: "col-sm-1 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.text_area :content %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit nil, class: "btn btn-lg btn-primary"  %>
          &nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to 'К списку', pages_path %>
        </div>
      </div>

    <% end %>

  </div>

</div>
